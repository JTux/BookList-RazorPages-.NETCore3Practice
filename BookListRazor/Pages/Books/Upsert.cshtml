@page
@model BookListRazor.Pages.Books.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}

<br />
<h2 class="text-info">@(Model.Book.Id != 0 ? "Edit" : "Create") Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        @if (Model.Book.Id != 0)
        {
            <input asp-for="Book.Id" type="hidden" />
        }

        <div class="form-group row">
            <div class="col-sm-3">
                <label asp-for="Book.Title" class="col-form-label"></label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Book.Title" class="form-control" />
            </div>
            <span asp-validation-for="Book.Title" class="text-danger col-form-label"></span>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label asp-for="Book.Author" class="col-form-label"></label>
            </div>
            <div class="col-sm-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger col-form-label"></span>
        </div>
        <div class="form-group row">
            <div class="col-sm-3 offset-sm-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Book.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-sm-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}